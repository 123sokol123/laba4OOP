<Window x:Class="WpfApp4._4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stress Test Results" Height="350" Width="525">
    <Grid>
        <Button Name="RunTestsButton" Content="Run Tests" VerticalAlignment="Top" Width="100" Height="30" Click="RunTests_Click"/>
        <TextBlock Name="SuccessCountText" VerticalAlignment="Top" Margin="120,10,0,0" HorizontalAlignment="Left"/>
        <TextBlock Name="FailureCountText" VerticalAlignment="Top" Margin="120,40,0,0" HorizontalAlignment="Left"/>
        <ListBox Name="ReasonsListBox" VerticalAlignment="Top" Margin="120,70,0,0" Width="350" Height="200"/>
    </Grid>
</Window>
